{
    "extends": ["tslint:recommended", "tslint-config-prettier"],
    "rules": {
        "no-var-requires": false,
        "no-unused-expression": false,
        "max-line-length": [
          true,
          200
        ],
        "eofline": true,
        "no-console": false,
        "no-debugger": true,
        "no-duplicate-imports": true,
        "one-variable-per-declaration": true,
        "no-trailing-whitespace": [
            true,
            "ignore-comments",
            "ignore-jsdoc"
        ],
        "ban": [
            true,
            {
              "name": [
                "Object",
                "assign"
              ],
              "message": "Could you use cloneDeep (lodash) for deep object copy?"
            }
        ],
        "max-classes-per-file": [
            true,
            1
        ],
        "semicolon": [
            true,
            "always"
        ]
    }
}